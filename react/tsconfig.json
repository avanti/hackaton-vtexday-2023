{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "dom"
    ],
    "baseUrl": "src",
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ]
}